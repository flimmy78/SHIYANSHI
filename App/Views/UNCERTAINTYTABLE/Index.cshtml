
@model Langben.DAL.UNCERTAINTYTABLE
@{ Layout = "~/Views/Shared/Index.cshtml"; }
@using Common
@using Models
<script src="~/Scripts/JScriptIndex.js"></script>

<br style="clear: both;" />

<script type="text/javascript" language="javascript">
    $(function () {

        $('#flexigridData').datagrid({
            title: '误差来源', //列表的标题
            iconCls: 'icon-site',
            width: 'auto',
            height: 'auto',
            //nowrap: false,
            striped: true,
            collapsible: true,
            url: '/api/UNCERTAINTYTABLEApi/UNCERTAINTYTABLEData_WUCHA/' + "@ViewBag.METERING_STANDARD_DEVICEID", //获取数据的url
            sortName: 'ID',
            sortOrder: 'desc',
            idField: 'ID',

            toolbar: [
                {
                    text: '创建',
                    iconCls: 'icon-add',
                    handler: function () {
                        return flexiCreate();
                    }
                }, {
                    text: '修改',
                    iconCls: 'icon-edit',
                    handler: function () {
                        return flexiModify();
                    }
                }
                 , {
                     text: '返回',
                     iconCls: 'icon-edit',
                     handler: function () {
                         return fanhui();
                     }
                 }
            ],
            columns: [[
                 { field: 'ID', title: 'ID', width: 29, hidden: true }
                , { field: '123', title: '', width: 64, checkbox: true }
               , { field: 'ASSESSMENTITEM', title: '评定项/范围', width: 100 }
               , { field: 'ERRORSOURCES', title: '误差来源', width: 100 }
               , { field: 'ERRORLIMITS', title: '误差限', width: 100 }
               , { field: 'THEERRODISTRIBUTION', title: '误差分布状况', width: 100 }
               , { field: 'KVALE', title: 'K', width: 100 }
               , { field: 'UNCERTAINTYUI', title: '不确定度ui', width: 100 }
               , { field: 'GROUPS', title: '组别', width: 100 }
               , { field: 'CATEGORY', title: '类别', width: 100 }
               , { field: 'METERING_STANDARD_DEVICEID', title: '@Html.DisplayNameFor(model => model.METERING_STANDARD_DEVICEIDOld)', width: 29, hidden: true }
            ]],
            pagination: true,
            rownumbers: true

        });

        var parent = window.dialogArguments; //获取父页面
        if (parent == "undefined" || parent == null) {
            //    不是在iframe中打开的
        } else {
            //隐藏所有的按钮和分隔符
            $(".l-btn.l-btn-plain").hide();
            $(".datagrid-btn-separator").hide();
            //添加选择按钮
            $('#flexigridData').datagrid("addToolbarItem", [{ "text": "选择", "iconCls": "icon-ok", handler: function () { flexiSelect(); } }]);
        }
    });

    //“选择”按钮，在其他（与此页面有关联）的页面中，此页面以弹出框的形式出现，选择页面中的数据
    function flexiSelect() {

        var rows = $('#flexigridData').datagrid('getChecked');
        if (rows.length == 0) {
            $.messager.alert('操作提示', '请选择数据!', 'warning');
            return false;
        }

        var arr = [];
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].METERING_STANDARD_DEVICEID+"$"+rows[i].CATEGORY + "$" + rows[i].GROUPS);
        }
        arr.push("^");
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].METERING_STANDARD_DEVICEID);
        }
        //主键列和显示列之间用 ^ 分割   每一项用 , 分割
        if (arr.length > 0) {//一条数据和多于一条
            returnParent(arr.join("&")); //每一项用 & 分割
        }
    }
   
    //导航到创建的按钮
    function flexiCreate() {

        window.location.href = "/METERING_STANDARD_DEVICE/Create/@ViewBag.METERING_STANDARD_DEVICEID^UA";
        return false;
        return false;
    }
    //导航到修改的按钮
    function flexiModify() {

        var arr = $('#flexigridData').datagrid('getChecked');

        if (arr.length == 1) {
            window.location.href = "/METERING_STANDARD_DEVICE/Edit/" + arr[0].METERING_STANDARD_DEVICEID + "^" + arr[0].GROUPS + "^" + "UA" + "^" + arr[0].CATEGORY;

        } else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
        return false;

    };
    //删除的按钮
    function flexiDelete() {

        var rows = $('#flexigridData').datagrid('getChecked');
        if (rows.length == 0) {
            $.messager.alert('操作提示', '请选择数据!', 'warning');
            return false;
        }

        var arr = [];
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].ID);
        }

        $.messager.confirm('操作提示', "确认删除这 " + arr.length + " 项吗？", function (r) {
            if (r) {
                $.ajax({
                    url: "api/UNCERTAINTYTABLEApi/Delete?query=" + arr.join(","),
                    type: "DELETE",
                    success: function (res) {
                        if (res.Code == 1) {
                            //移除删除的数据

                            $.messager.alert('操作提示', res.Message, 'info');
                            $("#flexigridData").datagrid("reload");
                            $("#flexigridData").datagrid("clearSelections");
                        }
                        else {
                            $.messager.alert('操作提示', res.Message, 'info');
                        }

                    }
                })
            }
        });

    };
    //返回
    function fanhui() {
        window.location.href = '/METERING_STANDARD_DEVICE/Index';
    }
</script>

