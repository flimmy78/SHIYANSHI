@model Langben.DAL.COMPANY

@{
    Layout = "~/Views/Shared/Edit.cshtml";
}
@using Common
@using Models
@section CurentPlace {
    修改
}

@using (Html.BeginForm("", "api/COMPANYApi/Put"))
{
    <fieldset>
        <legend>
            <input class="a2 f2" type="submit" value="修改" onclick="zuhe()" />
            <input class="a2 f2" type="button" onclick="BackList('COMPANY')" value="返回列表" />
        </legend>
        <div class="bigdiv">
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.CREATEPERSON)
            @Html.HiddenFor(model => model.CREATETIME)
            <div class="editor-form">
                <div class="editor-label">
                    @Html.LabelFor(model => model.COMPANYNAME)：
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.COMPANYNAME)
                    @Html.ValidationMessageFor(model => model.COMPANYNAME)
                </div>
            </div>
            <div class="editor-form">
                <div class="editor-label">
                    <label for="POSTCODE">单位简称：</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.POSTCODE)
                    @Html.ValidationMessageFor(model => model.POSTCODE)
                </div>
            </div>
            <div class="editor-label">
                <a class="anUnderLine" onclick="showModalOnly('PARENTID','../../COMPANY');">
                    @Html.LabelFor(model => model.PARENTID)
                </a>：
            </div>
            <div class="editor-field">
                <div id="checkPARENTID">
                    @if (Model != null)
                    {
                        if (!string.IsNullOrWhiteSpace(Model.PARENTID))
                        {
                            <table id="@Model.PARENTID"
                                   class="deleteStyle">
                                <tr>
                                    <td>
                                        <img alt="删除" title="点击删除" src="../../../Images/deleteimge.png" onclick="deleteTable('@Model.PARENTID','PARENTID');" />
                                    </td>
                                    <td>
                                        @Model.COMPANY2.COMPANYNAME
                                    </td>
                                </tr>
                            </table>
                        }
                    }
                </div>
                @Html.HiddenFor(model => model.PARENTID)
            </div>

        </div>
        <div class="bigdiv">

        </div>
        <div class="bigdiv">
            <div class="editor-form">
                <div class="editor-label">
                    <label for="POSTCODE">邮政编码：</label>
                </div>
                <div class="editor-field">
                    <input type="text" id="youbian" value="" class="text-box single-line" />
                </div>
            </div>
            <div class="editor-form">
                <div class="editor-label">
                    <label for="POSTCODE">联系人：</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.CONTACTS)
                    @Html.ValidationMessageFor(model => model.CONTACTS)
                </div>
            </div>
            <div class="editor-form">
                <div class="editor-label">
                    <label for="POSTCODE">联系电话：</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.CONTACTSNUMBER)
                    @Html.ValidationMessageFor(model => model.CONTACTSNUMBER)
                </div>
            </div>
            <div class="editor-form">
                <div class="editor-label">
                    <label for="POSTCODE">传真：</label>
                </div>
                <div class="editor-field">
                    @Html.EditorFor(model => model.FAX)
                    @Html.ValidationMessageFor(model => model.FAX)
                </div>
            </div>
        </div>
    </fieldset>
}
<script type="text/javascript">
    $(function () {
        var zhi = "@Model.FAX";
        $("#FAX").val(zhi.split('$')[0]);
        $("#youbian").val(zhi.split('$')[1]);
    })
    function zuhe() {
        var fax = $("#FAX").val();
        var youbian = $("#youbian").val();
        $("#FAX").val(fax + "$" + youbian);
    }
</script>


<style type="text/css">
    body {
        height: auto;
        font-size: 12px;
    }

    td {
        height: 25px;
    }

    .editor-field {
        width: 200px;
        height: 24px;
        float: left;
        margin: 11px 0 11px 6px;
        display: inline;
    }

        .editor-field .text-box {
            width: 180px;
        }

        .editor-field .easyui-combobox {
            width: 180px;
        }
</style>


