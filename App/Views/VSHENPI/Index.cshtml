@model Langben.DAL.VSHENPI
@{ Layout = "~/Views/Shared/Index.cshtml"; }
@using Common
@using Models
<div id="divQuery">

    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.ORDER_NUMBER):
        </div>
        <div class="input_search-field">
            <input type='text' id='ORDER_NUMBER' class="easyui-textbox" style="height:26px"/>
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
            @Html.LabelFor(model => model.UNDERTAKE_LABORATORYID):
        </div>
        <div class="input_search-field">
            @Html.DropDownList("UNDERTAKE_LABORATORYID", Models.SysFieldModels.GetSysField("UNDERTAKE_LABORATORY", "NAME"), "请选择", new { id = "UNDERTAKE_LABORATORYID"})
        </div>
    </div>
    <div class="input_search">
        <div class="input_search-label">
           报告状态：
        </div>
        <div class="input_search-field">
            <select class="my-textbox" id="REPORTSTATUS" name="REPORTSTATUS" style="margin-top:0">
                <option value="">请选择</option>
                <option value="待批准" selected="selected">待批准</option>
                <option value="批准驳回">批准驳回</option>
                <option value="已批准">已批准</option>
                <option value="报告已打印">报告已打印</option>
                <option value="报告已领取">报告已领取</option>
                <option value="报告已回收">报告已回收</option>

            </select>
            @*@Html.DropDownList("REPORTSTATUS", Models.SysFieldModels.GetSysField("VSHENPI", "APPROVALISAGGREY"), "请选择", new { id = "REPORTSTATUS" })*@
        </div>
    </div>
    <div class='input_search' style="padding-top:10px;">
        <a href="#" onclick="flexiQuery()" class="easyui-linkbutton" data-options="iconCls:'icon-search'">
            查 询
        </a>
    </div>
</div>
<br style="clear: both;" />

<script type="text/javascript" language="javascript">
    $(function () {

        $('#flexigridData').datagrid({
            title: '器具证书信息', //列表的标题
            iconCls: 'icon-site',
            width: 'auto',
            height: 'auto',
            //nowrap: false,
            striped: true,
            collapsible: true,
            url: '../VSHENPI/GetData', //获取数据的url
            sortName: 'ORDER_NUMBER',
            sortOrder: 'asc',
            idField: 'ID',

            //toolbar: [

            //     {
            //         text: '详细',
            //         iconCls: 'icon-search',
            //         handler: function () {
            //             return getView();
            //         }
            //     }],
            columns: [[


					{ field: 'ID', title: '@Html.DisplayNameFor(model => model.ID)', width: 77, hidden: true }
					, { field: 'REPORTNUMBER', title: '@Html.DisplayNameFor(model => model.REPORTNUMBER)', width: 119 }
					, { field: 'ORDER_NUMBER', title: '@Html.DisplayNameFor(model => model.ORDER_NUMBER)', width: 87 }
					, { field: 'APPLIANCE_NAME', title: '@Html.DisplayNameFor(model => model.APPLIANCE_NAME)', width: 77 }
					, { field: 'VERSION', title: '@Html.DisplayNameFor(model => model.VERSION)', width: 67 }
					, { field: 'FACTORY_NUM', title: '@Html.DisplayNameFor(model => model.FACTORY_NUM)', width: 67 }
					, { field: 'CERTIFICATE_ENTERPRISE', title: '@Html.DisplayNameFor(model => model.CERTIFICATE_ENTERPRISE)', width: 67 }
					, { field: 'CUSTOMER_SPECIFIC_REQUIREMENTS', title: '@Html.DisplayNameFor(model => model.CUSTOMER_SPECIFIC_REQUIREMENTS)', width: 77 }
					//, { field: 'CERTIFICATE_CATEGORY', title: '@Html.DisplayNameFor(model => model.CERTIFICATE_CATEGORY)', width: 67 }
					, { field: 'QUALIFICATIONS', title: '@Html.DisplayNameFor(model => model.QUALIFICATIONS)', width: 77 }
					//, { field: 'CONCLUSION_EXPLAIN', title: '@Html.DisplayNameFor(model => model.CONCLUSION_EXPLAIN)', width: 67 }
					, {
					    field: 'CONCLUSION', title: '@Html.DisplayNameFor(model => model.CONCLUSION)', width: 66, formatter: function (value, row, index) {
					        if (row.PACKAGETYPE == "上传") {
					            return row.FILECONCLUSION;
					        }
					        else {
					            return row.CONCLUSION;
					        }
					    }
					}
                    , { field: 'REPORTSTATUS', title: '@Html.DisplayNameFor(model => model.REPORTSTATUS)', width: 67 }
                    , { field: 'APPROVALISAGGREY', title: '@Html.DisplayNameFor(model => model.APPROVALISAGGREY)', width:67 }
                    , {
                        field: 'aa', title: '操作', width: 86, formatter: function (value, row, index) {
                            if (row.PACKAGETYPE == "上传") {
                                var html = "<a href='/VSHENHE/XiaZaiShenHe/" + row.ID + "^P'>下载审批</a>";
                            }
                            else if (row.PACKAGETYPE == "生成") {
                                var html = "<a href='/VSHENPI/ZaiXianShenHe/" + row.ID + "^P'>预览审批</a>";
                            }
                            return html;
                        }
                    }

            ]],
            pagination: true,
            rownumbers: true

        });

        var parent = window.dialogArguments; //获取父页面
        if (parent == "undefined" || parent == null) {
            //    不是在iframe中打开的
        } else {
            //隐藏所有的按钮和分隔符
            $(".l-btn.l-btn-plain").hide();
            $(".datagrid-btn-separator").hide();
            //添加选择按钮
            $('#flexigridData').datagrid("addToolbarItem", [{ "text": "选择", "iconCls": "icon-ok", handler: function () { flexiSelect(); } }]);
        }
    });

    //“查询”按钮，弹出查询框
    function flexiQuery() {

        //将查询条件按照分隔符拼接成字符串
        var search = "";
        $('#divQuery').find(":text,:selected,select,textarea,:hidden,:checked,:password").each(function () {
            if (this.id)
                search = search + this.id + "&" + this.value + "^";
            else
                search = search + this.name + "&" + this.value + "^";
        });
        //执行查询
        $('#flexigridData').datagrid('load', { search: search });
    };

    //“选择”按钮，在其他（与此页面有关联）的页面中，此页面以弹出框的形式出现，选择页面中的数据
    function flexiSelect() {

        var rows = $('#flexigridData').datagrid('getSelections');
        if (rows.length == 0) {
            $.messager.alert('操作提示', '请选择数据!', 'warning');
            return false;
        }

        var arr = [];
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].ID);
        }
        arr.push("^");
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].REPORTNUMBER);
        }
        //主键列和显示列之间用 ^ 分割   每一项用 , 分割
        if (arr.length > 0) {//一条数据和多于一条
            returnParent(arr.join("&")); //每一项用 & 分割
        }
    }
    //导航到查看详细的按钮
    function getView() {

        var arr = $('#flexigridData').datagrid('getSelections');

        if (arr.length == 1) {
            window.location.href = "../VSHENPI/Details/" + arr[0].ID;

        } else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
        return false;
    }


</script>

