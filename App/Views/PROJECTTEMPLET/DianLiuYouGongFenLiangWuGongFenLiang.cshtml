        //计算标准值
        function changeValue(obj) {

            jiSuanWuCha(obj, "RANGE", "OUTPUTVALUE", "READVALUE", "ACTUALVALUE", "SHIJISHUCHUZHI", "RELATIVEERROR", "UNCERTAINTYDEGREE", "BUQUEDINGDU", "BUQUEDINGDUM");

        }
        //误差
        //obj 自身对象
        //T1 标称值S(VA)
        //T2 校准点(%)
        //T3 显示值
        //T4 有功分量 实测值(mS
        //T5 有功分量 相对误差(%
        //T6 无功分量 实测值(mS)
        //T7 无功分量 相对误差(%
        //T8 cosφ
        //T9 额定电压(V)
        function jiSuanWuCha(obj, T1, T2, T3, T4, T5, T6, T7, T8, T9) {
            //重新计算当前行
            var name = $(obj).attr("name");
            var id = $(obj).attr("id");
            id = id.substring(id.indexOf('_'));
            var tongdao = id.split('_')[1];
            var liangCheng = id.split('_')[2];
            T1 = T1 + "_" + tongdao + "_" + liangCheng;             //改动的地方，参与计算的列的name值
            T2 = T2 + id;//改动的地方，参与计算的列的name值
            T3 = T3 + id;//改动的地方，误差的列的name值
            T4 = T4 + id;//有功分量 实测值(mS
            T5 = T5 + id;//有功分量 相对误差(%
            T6 = T6 + id;//无功分量 实测值(mS)
            T7 = T7 + id; //无功分量 相对误差(%
            T8 = T8 + "_" + tongdao + "_" + liangCheng;   //T8 cosφ
            T9 = T9 + "_" + tongdao + "_" + liangCheng;    //T9 额定电压(V)
            var T1Data = $("#" + T1).val();//T1 标称值S(VA)
            //var myselect = document.getElementById(T2);
            //var index = myselect.selectedIndex;             // selectedIndex代表的是你所选中项的index
            //var T2Data = myselect.options[index].value;
           var T2Data = $(obj).parent().parent().find("#" + T2).val();//T2 校准点(%)
           var T3Data = $(obj).parent().parent().find("#" + T3).val(); //T3 显示值
          
           var T5Data = $(obj).parent().parent().find("#" + T5).val(); //T5 无功分量 实测值(mS)
           var T6Data = $(obj).parent().parent().find("#" + T6).val(); //T6 无功分量 相对误差(%
            //var myselect7 = document.getElementById(T7);
            //var index7 = myselect7.selectedIndex;             // selectedIndex代表的是你所选中项的index
            //var T7Data = myselect7.options[index7].value;
            var T7Data = $(obj).parent().parent().find("#" + T7).val(); //T7  cosφ
            //var myselect8 = document.getElementById(T8);
            //var index8 = myselect8.selectedIndex;             // selectedIndex代表的是你所选中项的index
            //var T8Data = myselect8.options[index8].value;
            var T8Data = $("#" + T8).val(); //T8 额定电压(V)
            var T9Data = $("#" + T9).val(); //T9 额定电压(V)
            var CanData = $("#" + "xsz_" + tongdao + "_1_1").val(); //"xsz_t_1_1";
            var txtPointLen = $("#mywuchaxiaoshuweishu").val(); //小数点位数
            txtPointLen = parseFloat(txtPointLen);
            //【实测值】=显示值+参数(0.06或0.05)		
            if (T3Data != "" && CanData != "")
            {
                var r1
                try { r1 = T3Data.toString().split(".")[1].length } catch (e) { r1 = 0 }

                CanData = parseFloat(CanData);
                T3Data = parseFloat(T3Data);
                var jianfa = accAdd(T3Data, CanData);
                if (r1 != 0) {
                    var data = zeroFloat(fomatFloat(jianfa, r1), r1);
                } else {
                    var data = jianfa;
                }       
                $(obj).parent().parent().find("#" + T4).val(data);
            }
            var T4Data = $(obj).parent().parent().find("#" + T4).val(); //T4 有功分量实测值
            var BiaoChenData = $("#" + "HeGe_" + tongdao + "_1_1").val(); //"HeGe_t_1_1";
            if (BiaoChenData == "VA")
            {
                //【有功分量-相对误差%】=100*（标称值/额定电流平方* cos-有功分量实测值）/有功分量实测值，小数点后两位，四舍六入，逢五奇进偶不进																																																																													
                if (T1Data != "" && T9Data != "" && T4Data != "" && T8Data != "") {
                    T1Data = parseFloat(T1Data);
                    T9Data = parseFloat(T9Data);
                    T4Data = parseFloat(T4Data);
                    T8Data = parseFloat(T8Data);
                    var jianfa1 = T1Data.div(accMul(T9Data, T9Data)).mul(T8Data);
                    var jianfa2 = accSub(jianfa1, T4Data);
                    var jianfa = accDiv(accMul(100, jianfa2), T4Data);
                    var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                    $(obj).parent().parent().find("#" + T5).val(data);
                }
                T8Data = parseFloat(T8Data);
                //【无功分量-相对误差%】=100*(标称值/额定电流平方*0.6-无功分量实测值)/无功分量实测值，小数点后两位，四舍六入，逢五奇进偶不进																																																																													
                if (T8Data == 0.8 && T1Data != "" && T9Data != "" && T6Data != "") {
                        T1Data = parseFloat(T1Data);
                        T9Data = parseFloat(T9Data);
                        T6Data = parseFloat(T6Data);
                        var jianfa1 = T1Data.div(accMul(T9Data, T9Data)).mul(0.6);
                        var jianfa2 = accSub(jianfa1, T6Data);
                        var jianfa = accDiv(accMul(100, jianfa2), T6Data);
                        var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                        $(obj).parent().parent().find("#" + T7).val(data);
                      //【无功分量-相对误差%】=-(100*无功分量实测值/有功分量实测值)
                } else if (T8Data == 1 && T6Data != "" && T4Data != "") {
                      T6Data = parseFloat(T6Data);
                      T4Data = parseFloat(T4Data);
                      var jianfa1 = accMul(100, T6Data);
                      var jianfa2 = accDiv(jianfa1, T4Data);
                      var jianfa = accMul(-1, jianfa2);
                        var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                        $(obj).parent().parent().find("#" + T7).val(data);
                    }
                
               
            } else if (BiaoChenData == "Ω") // // 标称值Ω		
            {
                //电流Ω【有功分量-相对误差%】=100*（有功分量实测值-标称值*cos）/标称值，小数点后两位，四舍六入，逢五奇进偶不进		
                if (T1Data != "" && T4Data != "" && T8Data != "") {
                    T1Data = parseFloat(T1Data);
                    T4Data = parseFloat(T4Data);
                    T8Data = parseFloat(T8Data);
                    var jianfa1 = accSub(T4Data, accMul(T1Data,T8Data));
                    var jianfa = accDiv(accMul(100, jianfa1), T1Data);
                    var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                    $(obj).parent().parent().find("#" + T5).val(data);
                }
                T8Data = parseFloat(T8Data);
                //电流Ω【无功分量-相对误差%】=100*(无功分量实测值-标称值*0.6)/标称值，小数点后两位，四舍六入，逢五奇进偶不进																																																																													
                if (T1Data != "" && T6Data != "" && T8Data == 0.8) {

                    T1Data = parseFloat(T1Data);
                    T6Data = parseFloat(T6Data);

                    var jianfa =accDiv(accMul(100,accSub( T6Data,accMul(T1Data,0.6))),T1Data);
                    var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                    $(obj).parent().parent().find("#" + T7).val(data);
                    //【无功分量-相对误差%】=-(100*无功分量实测值/有功分量实测值)
                } else if (T8Data == 1 && T6Data != "" && T4Data != "") {
                    T6Data = parseFloat(T6Data);
                    T4Data = parseFloat(T4Data);
                    var jianfa1 = accMul(100, T6Data);
                    var jianfa2 = accDiv(jianfa1, T4Data);
                    var jianfa = accMul(-1, jianfa2);
                    var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                    $(obj).parent().parent().find("#" + T7).val(data);
                }

            }   																																																																											
        }
    


    </script>
<script>
    //方向键控制页面控件焦点移动
    function keyDown(event) {
        var colunmIdx = "";
        var inputs = $(".my-textbox")                              //通过class属性值获取控件组合
        var focus = document.activeElement;                 //得到处于激活状态的控件
        if (!document.getElementById("tongdao").contains(focus)) return;     //判断是否包含激活控件在指定的Table下
        //if (!$(".tbl").contains(focus)) return;
        var event = window.event || event;                              //获取事件
        var key = event.keyCode;                                        //得到按下的键盘Ascii码
        var flag = -1;

        //得到激活控件在组合中的具体位置
        for (var i = 0; i < inputs.length; i++) {
            if (inputs[i] === focus) {
                // alert(i);
                break;
            }
        }

        switch (key) {

            case 37: //向左键
                if (i > 0) inputs[i - 1].focus();
                break;
            case 38:                //向上键
                var td = $(inputs[i]).parents("td").index();      //当前所在的列数
                var tr = $(inputs[i]).parents("tr");
                var tr_up = $(inputs[i]).parents("tr").prev();      //当前所在的行数的上一行
                if ($(inputs[i]).parents("tr").prev().length >= 1) {   //判断上一行是否还有行
                    var tr_up = $("[rowindex=" + ($(tr).attr("rowindex") - 1) + "]", $(inputs[i]).parents("table")[0])[0];      //当前所在的行数的上一行

                    if ($(tr_up).attr("rowindex") == 1)  //如果是第一行
                        $(tr_up).find("td").eq(td+1).find('input').focus();    //此模板没有有rowspan合并行等,所以如果向上到第一行,td不增减;
                    else {
                        if ($(tr).find("td").length < $(tr_up).find("td").length)
                            $(tr_up).find("td").eq(td+1).find('input').focus();
                        if ($(tr).find("td").length == $(tr_up).find("td").length)
                            $(tr_up).find("td").eq(td).find('input').focus();
                        if ($(tr).find("td").length > $(tr_up).find("td").length)
                            $(tr_up).find("td").eq(td-1).find('input').focus();
                    }
                }
                else {
                    //没有则找上一个table
                    var prevtable = $(inputs[i]).parents("table").prev()[0];

                    var tr_up = $(prevtable).find("tr:eq(" + ($('tr', $(prevtable)).length - 2) + ")");
                    if ($(tr_up).attr("rowindex") == 1)
                        $(tr_up).find('td').eq(td+1).find('input').focus();
                    else
                        $(tr_up).find('td').eq(td).find('input').focus();
                }
                break;
            case 39: //向右键
                if (i < inputs.length - 1) inputs[i + 1].focus();
                break;
            case 40: //向下键
                var td = $(inputs[i]).parents("td").index();      //当前所在的列数
                var tr = $(inputs[i]).parents("tr");
                if ($(inputs[i]).parents("tr").next().length >= 1) {
                    var tr_down = $(inputs[i]).parents("tr").next();      //当前所在的行数的下一行
                    if ($(tr).attr("rowindex") != 1) {
                        if ($(tr).find("td").length < $(tr_down).find("td").length)
                            $(tr_down).find("td").eq(td + 1).find('input').focus();
                        if ($(tr).find("td").length == $(tr_down).find("td").length)
                            $(tr_down).find("td").eq(td).find('input').focus();
                        if ($(tr).find("td").length > $(tr_down).find("td").length)
                            $(tr_down).find("td").eq(td-1).find('input').focus();
                    }
                    else
                        $(tr_down).find("td").eq(td-1).find('input').focus();//第一列没有合并行，td数量不变
                }
                else {
                    var table = $(inputs[i]).parents("table").next();
                    var tr = $('[rowindex]', table).eq(0);
                    if ($(tr).attr("rowindex") != 1)
                        $(tr).find('td').eq(td).find('input').focus();
                    else
                        $(tr).find('td').eq(td + 1).find('input').focus();
                }
                break;
            case 13:                //回车键
                event.returnValue = false;                          //阻止自动提交
                var j = i + 1;
                var flag = false;
                if (inputs.get(j).disabled == false) {
                    flag = true;
                } else {
                    for (j = i + 4; j <= inputs.length - 1; j = j + 2) {
                        if (inputs.get(j).disabled == false) {
                            flag = true;
                            break;
                        }
                    }
                }
                if (flag) {
                    inputs[j].focus();
                }
                break;
        }
    }
</script>
