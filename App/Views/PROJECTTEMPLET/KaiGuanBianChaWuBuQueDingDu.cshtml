            }
            var r1;
            try { r1 = maxValue.toString().split(".")[1].length } catch (e) { r1 = 0 }
            max = zeroFloat(max, r1);
            $("#SHIJISHUCHUZHI" + "_" + tongdao + "_1").val(max);
           
        }


       																																							

