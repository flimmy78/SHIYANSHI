                } else {//如果没有写value属性，则加上
                    var value = $(this).val();
                    $(this).attr("value", value);
                }


            }
        });

        $("select").each(function () {
            //除了隐藏模板中的下拉框，其他所有的下拉框
            if (this.id != "") {

                var value = $(this).val();
                //清除所有的selected
                $(this).find("option").each(function (i, item) {
                    if ($(item).val() == value) {
                        //将选中的value的option设置为selected
                        $(item).attr("selected", true);
                    } else {
                        $(item).attr("selected", false);
                    }


                }
            );

            }

        });
