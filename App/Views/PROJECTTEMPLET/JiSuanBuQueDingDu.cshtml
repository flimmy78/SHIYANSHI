    function getDataB() {
        var data = "";
        $("#tongdao_B tr:not(:first)").each(function (idx) {
            if ($(this).children().eq(5).find('input').eq(0).val() != "" && $(this).children().eq(5).find('input').eq(0).val() != undefined)
