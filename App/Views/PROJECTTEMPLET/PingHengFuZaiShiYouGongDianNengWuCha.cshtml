                var data = zeroFloat(fomatFloat(jianfa, txtPointLen), txtPointLen);
                $(obj).parent().parent().find("#" + T8).val(data);
            }
            //【s化整】引用电能标准偏差估计值																																																								
            //【功率因数cosφ】、【Ib(%)】同一个相线、量程下上下相等着合并。																																																								
        }
    
