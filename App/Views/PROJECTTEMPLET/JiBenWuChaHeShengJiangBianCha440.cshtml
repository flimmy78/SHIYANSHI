           // var T8Data = $(obj).parent().parent().find("#" + T8).val(); //T8 升降变差(%)
          //  var T9Data = $(obj).parent().parent().find("#" + T9).val(); //T9 校准结果的不确定度U(k={0})
            var txtPointLen = $("#mywuchaxiaoshuweishu").val(); //小数点位数
