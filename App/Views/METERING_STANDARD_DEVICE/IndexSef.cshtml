
@model Langben.DAL.METERING_STANDARD_DEVICE
@{ Layout = "~/Views/Shared/Index.cshtml"; }
@using Common
@using Models
<script src="~/Scripts/JScriptIndex.js"></script>
<div id="divQuery">

    <div class='input_search' style="padding-top:10px;">
        <div class="editor-form">
            &nbsp&nbsp @Html.Label("编号")：@Html.Editor("bianhao")
        </div>
        <a href="#" onclick="flexiQuery()" class="easyui-linkbutton" data-options="iconCls:'icon-search'">
            查 询
        </a>
    </div>
</div>
<br style="clear: both;" />
<span id="checkUNDERTAKE_LABORATORYIDOld">
</span>
@*<input type="hidden" value="" name="abc" id="abc" />*@
@Html.HiddenFor(model => model.UNDERTAKE_LABORATORYIDOld)
<script type="text/javascript" language="javascript">
    $(function () {

        $('#flexigridData').datagrid({
            //title: '标准装置/计量标准器信息', //列表的标题
            iconCls: 'icon-site',
            width: 'auto',
            height: 'auto',
            //nowrap: false,
            striped: true,
            collapsible: true,
            url: '/api/METERING_STANDARD_DEVICEApi/PostDataX', //获取数据的url
            sortName: 'ID',
            sortOrder: 'desc',
            idField: 'ID',
            queryParams: { search: GetQuery() },//默认查询条件
            toolbar: [

                 {
                     text: '详细',
                     iconCls: 'icon-search',
                     handler: function () {
                         return getView();
                     }
                 }, {
                     text: '创建',
                     iconCls: 'icon-add',
                     handler: function () {
                         return flexiCreate();
                     }
                 }, {
                     text: '删除',
                     iconCls: 'icon-remove',
                     handler: function () {
                         return flexiDelete();
                     }
                 }, {
                     text: '修改',
                     iconCls: 'icon-edit',
                     handler: function () {
                         return flexiModify();
                     }
                 }],
            columns: [[
                { field: 'ID', title: 'ID', width: 86, hidden: true }
                , { field: 'NAME', title: '@Html.DisplayNameFor(model => model.NAME)', width: 200, align: 'center' }
                , { field: 'TEST_RANGE', title: '@Html.DisplayNameFor(model => model.TEST_RANGE)', width: 130, align: 'center' }
                , { field: 'FACTORY_NUM', title: '@Html.DisplayNameFor(model => model.FACTORY_NUM)', width: 130, align: 'center' }
                , { field: 'XINGHAO', title: '@Html.DisplayNameFor(model => model.XINGHAO)', width: 130, align: 'center' }
                , { field: 'CATEGORY', title: '@Html.DisplayNameFor(model => model.CATEGORY)', width: 86, align: 'center' }
                , { field: 'STATUS', title: '@Html.DisplayNameFor(model => model.STATUS)', width: 86, hidden: true, align: 'center' }
                , {
                    field: 'A', title: '准确度等级', width: 86, align: 'center', formatter: function (value, row, index) {
                        var a = "<a href=_t_javascript:;_t_ class=_t_easyui-linkbutton_t_ data-options=_t_iconCls:'icon-search'_t_ onclick=_t_showModalMany('UNDERTAKE_LABORATORYIDOld', '/METERING_STANDARD_DEVICE/ALLOWABLE_ERROR/" + row.ID + "');_t_>准确度等级</a>";
                        var reg = new RegExp("_t_", "g");//g,表示全部替换。
                        return a.replace(reg, '"');
                    }
                }
            ]],
            pagination: false,
            rownumbers: false

        });

        var parent = window.dialogArguments; //获取父页面
        if (parent == "undefined" || parent == null) {
            //    不是在iframe中打开的
        } else {
            //隐藏所有的按钮和分隔符
            $(".l-btn.l-btn-plain").hide();
            $(".datagrid-btn-separator").hide();
            //添加选择按钮
            $('#flexigridData').datagrid("addToolbarItem", [{ "text": "确认以上测试器具", "iconCls": "icon-ok", handler: function () { flexiSelect(); } }]);
        }
    });
    //将查询条件按照分隔符拼接成字符串
    function GetQuery() {
        var search = "UNDERTAKE_LABORATORYID&@ViewBag.shiyanshi";

        return search;
    };
    //“查询”按钮，弹出查询框
    function flexiQuery() {

        //将查询条件按照分隔符拼接成字符串
        var search = "";
        search += "FACTORY_NUM" + "&" + $("#bianhao").val();
        //执行查询
        $('#flexigridData').datagrid('load', { search: search });
    };
    //“导出”按钮     在6.0版本中修改
    function flexiExport() {

        //将查询条件按照分隔符拼接成字符串
        var search = "";
        $('#divQuery').find(":text,:selected,select,textarea,:hidden,:checked,:password").each(function () {
            search = search + this.id + "&" + this.value + "^";
        });

        var p = $('#flexigridData').datagrid('options').columns[0];
        var field = [];//所有的列名
        var title = [];//所有的标题名称
        $(p).each(function () {
            field.push(this.field);
            title.push(this.title);
        });

        $.post("api/METERING_STANDARD_DEVICEApi/PostExport",
            {
                title: title.join(","),
                field: field.join(","),
                sortName: $('#flexigridData').datagrid('options').sortName,
                sortOrder: $('#flexigridData').datagrid('options').sortOrder,
                search: search
            }, function (res) {
                if (res.Code == 1) {
                    window.location.href = res.Message;
                }
                else $.messager.alert('操作提示', res.Message, 'info');

            });
    };
    //“选择”按钮，在其他（与此页面有关联）的页面中，此页面以弹出框的形式出现，选择页面中的数据
    function flexiSelect() {
        var arr = [];
        var zhi = $("#UNDERTAKE_LABORATORYIDOld").val();
        if (zhi != "") {
            var z = zhi.split('^');
            for (var i = 0; i < z.length; i++) {
                if (z[i] != null) {
                    var b = z[i].split('&')[0]
                    arr.push(b);
                }

            }
            arr.push("^");
            for (var i = 0; i < z.length; i++) {
                if (z[i] != null) {
                    var b = z[i].split('&')[1]
                    arr.push(b);
                }

            }
            if (arr.length > 0) {//一条数据和多于一条
                returnParent(arr.join("&")); //每一项用 & 分割
            }
        }
        else {
            $.messager.alert('操作提示', "选择不能为空!", 'info');
            return false;
        }

        //主键列和显示列之间用 ^ 分割   每一项用 , 分割
        if (arr.length > 0) {//一条数据和多于一条
            returnParent(arr.join("&")); //每一项用 & 分割
        }
    }

    //导航到查看详细的按钮
    function getView() {

        var arr = $('#flexigridData').datagrid('getSelections');

        if (arr.length == 1) {
            window.location.href = "../METERING_STANDARD_DEVICE/Details/" + arr[0].ID;

        } else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
        return false;
    }
    //导航到创建的按钮
    function flexiCreate() {

        window.location.href = "../METERING_STANDARD_DEVICE/Create";
        return false;
    }
    //导航到修改的按钮
    function flexiModify() {

        var arr = $('#flexigridData').datagrid('getSelections');

        if (arr.length == 1) {
            window.location.href = "../METERING_STANDARD_DEVICE/Edit/" + arr[0].ID;

        } else {
            $.messager.alert('操作提示', '请选择一条数据!', 'warning');
        }
        return false;

    };
    //删除的按钮
    function flexiDelete() {

        var rows = $('#flexigridData').datagrid('getSelections');
        if (rows.length == 0) {
            $.messager.alert('操作提示', '请选择数据!', 'warning');
            return false;
        }

        var arr = [];
        for (var i = 0; i < rows.length; i++) {
            arr.push(rows[i].ID);
        }

        $.messager.confirm('操作提示', "确认删除这 " + arr.length + " 项吗？", function (r) {
            if (r) {
                $.ajax({
                    url: "api/METERING_STANDARD_DEVICEApi/Delete?query=" + arr.join(","),
                    type: "DELETE",
                    success: function (res) {
                        if (res.Code == 1) {
                            //移除删除的数据

                            $.messager.alert('操作提示', res.Message, 'info');
                            $("#flexigridData").datagrid("reload");
                            $("#flexigridData").datagrid("clearSelections");
                        }
                        else {
                            $.messager.alert('操作提示', res.Message, 'info');
                        }

                    }
                })
            }
        });

    };

</script>
