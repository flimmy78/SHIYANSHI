                $("#INSPECTION_ENTERPRISE_POST").val(row.INSPECTION_ENTERPRISE_POST);//送检单位邮政编码
                $("#CONTACTS").val(row.CONTACTS);//联系人
                $("#CONTACT_PHONE").val(row.CONTACT_PHONE);//联系电话
                $("#FAX").val(row.FAX);//传真
